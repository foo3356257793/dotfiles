#!/usr/bin/sage

import prob_functions
import random

NUM_WHEAT = 2**4
NUM_TARES = NUM_WHEAT
NUM_ROUNDS = 4
TARGET_NUM_WHEAT = NUM_WHEAT // 2

def gen_random_vector(vec_len):

    return [random.uniform(0,1) for _ in range(vec_len)]

def gen_random_vec_of_vec(num_vec,vec_len):

    return [gen_random_vector(vec_len) for _ in range(num_vec)]

if __name__ == "__main__":

    print("Hello, world!")

    wheat = gen_random_vec_of_vec(NUM_WHEAT, NUM_ROUNDS)
    tares = gen_random_vec_of_vec(NUM_TARES, NUM_ROUNDS)

    boundaries = prob_functions.find_boundaries(wheat, tares, NUM_ROUNDS, TARGET_NUM_WHEAT)

    print("Found boundaries:")
    print(boundaries)

