#!/usr/bin/sage

def A_n(n):

    P = euler_phi(9*n)

    for d in divisors(P):

        if (power_mod(10,d,9*n)-1)//9 == 0:
            return d

    return P

if __name__ == "__main__":


    search_bd = 1000

    vals = []

    n = 2

    while len(vals) < 25:

        if is_prime(n):
            continue

        A = A_n(n)

        if (n-1) % A == 0:
            vals.append(n)
            print(len(vals),n)

        n += 1
