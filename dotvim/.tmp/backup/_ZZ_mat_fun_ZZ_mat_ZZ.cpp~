ZZ_mat translate(const std::function<void(fmpz_mat_t,const fmpz_mat_t,const fmpz_t)> &fun,
    const _ZZ_mat_1 &in_1, const _ZZ &in_2){
  auto out = ZZ_mat(in_1.nrows(),in_1.ncols());
  fun(out.data,in_1.data,in_2.data);
  return out;
}

ZZ_mat translate(const std::function<void(fmpz_t,const fmpz_t,const fmpz_t)> &fun,
    const _ZZ_mat_1 &in_1, const _ZZ &in_2){
  auto out = ZZ_mat(in_1.nrows(),in_1.ncols());

  for(int row=0; row<in_1.nrows(); row++){
    for(int col=0; col<in_1.ncols(); col++){
      fun(out[row][col].data,in_1[row][col].data,in_2.data);
    }
  }

  return out;
}

ZZ_mat operator*(const _ZZ_mat_1 &in_1, const _ZZ &in_2)
{
  return translate(fmpz_mat_scalar_mul_fmpz,in_1,in_2);
}

ZZ_mat operator*(const _ZZ &in_1, const _ZZ_mat_1 &in_2)
{
  return in_2 * in_1;
}

ZZ_mat divexact(const _ZZ_mat_1 &in_1, const _ZZ &in_2)
{
  return translate(fmpz_mat_scalar_divexact_fmpz,in_1,in_2);
}

ZZ_mat operator%(const _ZZ_mat_1 &in_1, const _ZZ &in_2){
  return translate(fmpz_mod,in_1,in_2);
}
