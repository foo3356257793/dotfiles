#!/usr/bin/sage

from re import sub

if __name__ == "__main__":

    fp = open('roman.txt', 'r')

    numerals = fp.readlines()

    fp.close()

    numerals = [n.strip() for n in numerals]

    orig_size = sum([len(n) for n in numerals])

    for i in range(len(numerals)):

        numerals[i] = sub(r'DCCCC', 'CM', numerals[i])
        numerals[i] = sub(r'CCCC', 'CD', numerals[i])
        numerals[i] = sub(r'LXXXX', 'XC', numerals[i])
        numerals[i] = sub(r'XXXX', 'XL', numerals[i])
        numerals[i] = sub(r'VIIII', 'IX', numerals[i])
        numerals[i] = sub(r'IIII', 'IV', numerals[i])

    new_size = sum([len(n) for n in numerals])
