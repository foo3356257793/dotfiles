use rayon::prelude::*;

const SUM:i32 = 1000;

fn test_a(a: i32) -> Option<i32>
{

    for b in a..(((SUM-a)/2)+1) {
        let c = SUM-a-b;
        if a*a+b*b==c*c {
            return Some(a*b*c);
        }
    }

    return None;

}

fn main() {

    let answer = (1..((SUM/3)+1)).into_par_iter().find_map_any(|a| test_a(a));

    // for a in 1..((SUM/3)+1) {
    //     let possible_answer = test_a(a);

    //     if let Some(answer) = possible_answer {
    //         println!("{}", answer);
    //     }

    // }

    println!("{}", answer.unwrap());

}
