  valarray<double> c = a+b;

  //print("[{}]\n", fmt::join(a,", "));
  //print("[{}]\n", fmt::join(b,", "));
  //print("[{}]\n", fmt::join(c,", "));

  print("[");
  for(auto &v : a){
    print("{}, ", v);
  }
  print("]\n");
  print("[");
  for(auto &v : b){
    print("{}, ", v);
  }
  print("]\n");
  print("[");
  for(auto &v : c){
    print("{}, ", v);
  }
  print("]\n");

}

