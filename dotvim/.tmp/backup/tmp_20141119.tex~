%opening
\title{Scratch}
\author{}
\date{Today}

\begin{document}

\maketitle

\[
  B(x,y) = \frac{(x-1)!(y-1)!}{(x+y-1)!}.
\]

\[
  B(2d + k - (j+k) + 1, (j+k) + 1) =
  \frac{(2d-j)!(j+k)!}{(2d+k+1)!}.
\]

\[
  \frac{1}{{{2d+k}\choose{j+k}}} =
  \frac{(2d+k-(j+k))!(j+k)!}{(2d+k)!}.
\]

\[
  B(x, y) = \int_0^1 t^{x-1} (1-t)^{y-1} dt.
\]

\[
  \int_0^{\infty} x^{j+k} \frac{2d + k + 1}{(x+1)^{2d+k+2}} dx.
\]

\[
  x = \frac{1}{t} - 1 \quad \Rightarrow \quad dx = -\frac{dt}{t^2}
\]
and
\[
  \int_0^{\infty} x^{j+k} \frac{2d + k + 1}{(x+1)^{2d+k+2}} dx
  = \int_{1}^{0} (1/t - 1)^{j+k} \frac{2d+k+1}{(1/t)^{2d+k+2}}
    -t^{-2} dt.
\]
which is
\[
  \int_0^1 (1-t)^{j+k}(t)^{2d+k} dt.
\]



\end{document}

