#!/usr/bin/sage

if __name__ == "__main__":

    #perim_bd = 16
    perim_bd = 10**9

    n_bd = (perim_bd - 1)//3

    sqrt_n_mone_bd = floor(sqrt(n_bd+1))


    sq_fun_0 = lambda x: 3*(x*x) - 2*x - 1

    sq_fun_1 = lambda x: 3*(x*x) + 2*x - 1

    S = 0

    #for n in range(1,n_bd+1,2):
    for sqrt_n_mone in range(1,sqrt_n_mone_bd+1):

        n = sqrt_n_mone^2 + 1

        sq_val = sq_fun_0(n)

        if sq_val > 0 and is_square(sq_val):

            print(n,n,n+1)

            S += 3*n+1

        n = 2 * sqrt_n_mone^2 + 1

        sq_val = sq_fun_0(n)

        if sq_val > 0 and is_square(sq_val):

            print(n,n,n+1)

            S += 3*n+1

        n = sqrt_n_mone^2 - 1

        sq_val = sq_fun_1(n)

        if sq_val > 0 and is_square(sq_val):

            print(n-1,n,n)

            S += 3*n-1

        n = 2 * sqrt_n_mone^2 - 1

        sq_val = sq_fun_1(n)

        if sq_val > 0 and is_square(sq_val):

            print(n-1,n,n)

            S += 3*n-1
