\begin{document}

  {\Large Name: \rule{4cm}{0.15mm}}

  \paragraph{Minion Math \#12.}

  \begin{align*}
    \ma  + 1 &= \mb \\
    \ma + \mb &= 1 \\
    \ma + \mc &= 0 \\
    \ma + \mb + \mc &= \md
  \end{align*}

  \paragraph{Answers.}

  \begin{align*}
    \ma &= \blank \\
    \mb &= \blank \\
    \mc &= \blank \\
    \md &= \blank
  \end{align*}

