#!/usr/bin/python3

import os
import sys

if __name__ == "__main__":


    print("Argument list:", str(sys.argv))

    fname = sys.argv[1]

    blurs = ['0x8', '0x16', '0x32', '0x64']

    for blur in blurs:

        cmd = 'convert %s -filter Gaussian -blur %s blur_%s_%s' % (fname, blur, blur, fname)
        os.system(cmd)
