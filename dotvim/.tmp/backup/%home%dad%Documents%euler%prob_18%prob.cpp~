#include <stdint.h>
#include <stdio.h>
#include <stdlib.h>

#include <vector>
#include <bits/stdc++.h>

#include <fstream>
#include <iostream>

using namespace std;

vector <int> split_line_into_numbers(string line)
{

  vector <int> answer;

  istringstream stream(line);

  int number;
  stream >> number;

  while(stream) {
    answer.push_back(number);
    stream >> number;
  }

  return answer;

}

int main() {

  fstream myfile;
  myfile.open("data.txt", ios::in);

  vector <vector<int>> input_data;

  if (myfile.is_open()) {
    string line;
    while (getline(myfile, line)) {

      input_data.push_back(split_line_into_numbers(line));

    }
    myfile.close();
  } else {
    cout << "Error opening file.\n";
    exit(EXIT_FAILURE);
  }


  for(int row_index = input_data.size()-2; row_index >= 0; row_index--)
  {
    int row_length = input_data[row_index].size();

    for(int column_index = 0; column_index < row_length; column_index++)
    {
      int max_child = max(input_data[row_index+1][column_index], input_data[row_index+1][column_index+1]);

      input_data[row_index][column_index] += max_child;
    }
  }

  cout << input_data[0][0] << endl;

}
