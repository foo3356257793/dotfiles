#!/usr/bin/sage

if __name__ == "__main__":

    max_sols = 0
    arg_max = 0

    p = 120

    a = 20

    b = p * (2*a-p)/(2*a-2*p)

    for p in range(1,1000+1):

        num_sols = 0

        a_max = floor(p/(2+sqrt(2)))

        for a in range(1,a_max):

            b = p * (2*a-p) / (2*a-2*p)

            if a > b:
                break

            if denominator(b) == 1:

                c = p-b-a

                num_sols += 1

        print(p, num_sols)
        if num_sols > max_sols:

            max_sols = num_sols
            arg_max = p

