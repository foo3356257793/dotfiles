#!/usr/bin/sage

if __name__ == "__main__":

    #bd = 2**10
    bd = 5000

    ct = 0

    # a = 1 cases
    # 1 + b^2 = c^2 + 1
    # 1 + 2*b <= bd
    # b <= (bd-1)/2

    ct = (bd-1)//2

    bd_sq = bd*bd

    for a in range(2,bd):

        for b in range(a,bd-a):

            c_sq = a^2 + b^2 - 1

            if is_square(c_sq):

                c = sqrt(c_sq)

                if a+b+c <= bd:

                    ct += 1

                    if a == 1:
                        one_ct += 1

    print("ct = %d" % ct)
