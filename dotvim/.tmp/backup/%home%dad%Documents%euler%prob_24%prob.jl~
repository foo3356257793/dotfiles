function prob_24()
    n = 10 # number of digits

    num_perm = factorial(n)

    target_ranking = 10^6

    # first digit
    target_index = target_ranking-1

    digit_pos = []

    for i in 1:n-1

        digit = target_index รท factorial(n-i)

        push!(digit_pos,digit+1)

        target_index -= digit * factorial(n-i)
    end

    perm = []

    remaining_digits = Array(0:n-1)
    for d in digit_pos
        actual_digit = remaining_digits[d]
        push!(perm,actual_digit)
        deleteat!(remaining_digits, d)
    end

    push!(perm, remaining_digits[1])

    perm_str = ""
    for d in perm
        perm_str *= string(d)
    end

    println(perm_str)
end

prob_24()
