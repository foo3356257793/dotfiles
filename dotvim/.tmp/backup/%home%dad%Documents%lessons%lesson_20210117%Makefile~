all: lesson.html

%.pdf: %.tex
	$(TEX) $+

lesson.html: lesson.md
	pandoc --standalone -c ../ss_lesson_pandoc.css -f markdown -t html -o $@ $+

kids_lesson.html: kids_lesson.md
	pandoc --standalone -c ../lesson_pandoc.css -f markdown -t html -o $@ $+

clean:
	rm lesson.html kids_lesson.html

.PHONY: clean
