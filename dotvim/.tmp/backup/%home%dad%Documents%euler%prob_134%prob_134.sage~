#!/usr/bin/sage

if __name__ == "__main__":

    S = 0

    bd = 1000000

    primes = prime_range(5,bd+1)
    primes.append(next_prime(primes[-1]))

    S = 0

    for i in range(len(primes)-1):

        p1 = primes[i]
        p2 = primes[i+1]

        len_p1 = ceil(log(p1,10))

        coeff = power_mod(10,-len_p1,p2)
        coeff = (coeff * -p1) % p2

        val = p1 + (10**len_p1) * coeff

        S += val
