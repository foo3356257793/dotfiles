#define _ZZ_mat ZZ_mat
#include "ZZ_mat/ZZ_mat_struct.cpp"
#undef _ZZ_mat
#define _ZZ_mat ZZ_mat_ptr
#include "ZZ_mat/ZZ_mat_struct.cpp"
#undef _ZZ_mat

ZZ_mat::ZZ_mat(int rows, int cols){
  if(rows<0 || cols<0){
    throw std::invalid_argument("Negative dimensional matrix");
  }
  fmpz_mat_init(data,rows,cols);
}

ZZ_mat::ZZ_mat() : ZZ_mat(0,0) {}


ZZ_mat::ZZ_mat(ZZ_mat &&in) noexcept : ZZ_mat() {
  fmpz_mat_swap(data,in.data);
}

ZZ_mat &ZZ_mat::operator=(ZZ_mat &&in) noexcept {
  fmpz_mat_swap(data,in.data);
  return *this;
}

ZZ_mat::~ZZ_mat() { fmpz_mat_clear(data); }

