import unittest

UPPER_BOUND = 2000000

def prob_10(upper_bound):

    p = 0

    answer = 0;

    while p <= upper_bound:
        answer += p
        p = next_prime(p)
        #p = nextprime(p)

    return answer

class TestProb10(unittest.TestCase):

    def test_10(self):

        answer = 2+3+5+7
        result = prob_10(10)

        self.assertEqual(answer, result)

    def test_1000(self):

        answer = sum(prime_range(1000))
        result = prob_10(1000)

        self.assertEqual(answer, result)

if __name__ == '__main__':

    #suite = unittest.defaultTestLoader.loadTestsFromTestCase(TestProb10)

    suite = unittest.TestSuite()
    suite.addTest(TestProb10('test_10'))
    suite.addTest(TestProb10('test_1000'))

    runner = unittest.TextTestRunner()
    runner.run(suite)

