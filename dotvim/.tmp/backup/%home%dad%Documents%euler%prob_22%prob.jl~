# Project Euler Problem 22 solution.

function letter_value(l)
    return 1 + Int(l) - Int('A')
end

function prob_22()
    lines = readlines("names.txt")
    names = split(lines[1], ",")
    names = [strip(name, '"') for name in names]
    names = sort(names)

    answer = 0

    for (i,name) in enumerate(names)
        letter_score = sum([letter_value(c) for c in name])
        answer += i * letter_score
    end

    return answer

end

prob_22()
