#!/usr/bin/sage

if __name__ == "__main__":

    relations = [
    [2   , 4   , 1],
    [12  , 24  , 6],
    [70  , 140 , 35],
    [15  , 45  , 5],
    [24  , 48  , 12],
    [252 , 336 , 189],
    [220 , 275 , 176],
    [36  , 72  , 18],
    [72  , 144 , 36],
    [75  , 225 , 25] ]

    for arr in relations:

        # check that these form a geometric sequence

        is_geometric = arr[0]^2 / arr[2] == arr[1]

        if not is_geometric:

            print(f'{arr} is not a geometric sequence')

        # check that we get a perfect square
        n = arr[0]*arr[1] + arr[2]

        if not is_square(n):

            print(f'{arr} does not give a perfect square')
