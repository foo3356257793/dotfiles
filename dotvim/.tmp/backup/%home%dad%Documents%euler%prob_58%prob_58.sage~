#!/usr/bin/sage

if __name__ == "__main__":

    num_prime = 8
    num_diag = 13

    n = 7

    while 10 * num_prime >= num_diag:

        n += 2

        n_sq = n*n
        delta = n-1

        p = n_sq - delta

        for i in range(3):

            if is_prime(p):
                num_prime += 1

            p -= delta

        num_diag += 4

        print(n, num_prime, num_diag)
