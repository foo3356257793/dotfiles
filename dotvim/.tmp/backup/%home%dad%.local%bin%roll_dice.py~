#!/usr/bin/python3

from random import randrange
import argparse

if __name__ == "__main__":

    parser = argparse.ArgumentParser(
            description='Roll an n-sided dice.')
    parser.add_argument('n', nargs='?', metavar='n', type=int, help='number of sides',
                        default=6)

    args = parser.parse_args()

    answer = randrange(args.n)+1

    print(answer)
