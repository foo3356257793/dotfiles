NUM_ADJACENT = 13

# read the file and store digits in a vector
function prob_8()

    digits = Vector{Int}()
    file = open("number.txt","r")
    while !eof(file)
        c = read(file, Char)

        if isspace(c)
            continue
        end
        push!(digits, parse(Int,c))
    end
    close(file)

    answer = 0

    for i in 1:length(digits)-NUM_ADJACENT+1
        prod = digits[i]

        for j in 1:NUM_ADJACENT-1
            prod *= digits[i+j]
        end

        if prod > answer
            answer = prod
        end
    end

    println(answer)

end

prob_8()
