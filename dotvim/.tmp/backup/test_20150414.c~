#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[])
{

    int x = -1;
    printf("starting with %d = %8X\n", x, (uint32_t) x);
    int y = x >> 31;
    printf("y = %d = %8X\n", y,  y);
    x ^= y;
    printf("x ^ y = %d = %8X\n", x,  x);
    x -= y;
    printf("(x ^ y) - y = %d = %8X\n", x,  x);


}

