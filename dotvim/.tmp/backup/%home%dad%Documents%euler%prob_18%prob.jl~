function prob_18()

    lines = readlines("data.txt")

    data = Vector{Vector{Int}}()

    for line in lines
        row = [parse(Int, w) for w in split(line)]
        push!(data, row)
    end

    # go through the data in reverse order

    i = length(data)-1

    while i > 0
        line_len = length(data[i])

        for j in 1:line_len
            max_child = max(data[i+1][j], data[i+1][j+1])

            data[i][j] += max_child
        end

        i -= 1
    end

    answer = data[1][1]

    println(answer)
end

prob_18()
