_ZZ_mat &_ZZ_mat::translate(const std::function<void(fmpz_mat_t,fmpz_mat_t,const ulong)> &fun,
    const _UI in){
  fun(data,data,in);
  return *this;
}

_ZZ_mat &_ZZ_mat::translate(const std::function<void(fmpz_t,fmpz_t,const ulong)> &fun,
    const _UI in){

  for(int row=0; row<nrows(); row++){
    for(int col=0; col<ncols(); col++){
      fun((*this)[row][col].data,(*this)[row][col].data,in);
    }
  }

  return *this;
}

_ZZ_mat &_ZZ_mat::operator*=(const _UI in)
{
  return translate(fmpz_mat_scalar_mul_ui,in);
}

_ZZ_mat &_ZZ_mat::operator%=(const _UI in)
{
  return translate(fmpz_mod_ui,in);
}

_ZZ_mat &_ZZ_mat::divexact_eq(const _UI in)
{
  return translate(fmpz_mat_scalar_divexact_ui,in);
}
