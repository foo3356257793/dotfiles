def encode(phrase, key, shift):

  new_phrase = ''
  for ell in phrase.lower():
    if ell in key:
      j = key.index(ell)
      j = (j+shift) % 26
      new_phrase += '%d-' % j
    else:
      new_phrase += '%s' % ell

  return new_phrase

letters = 'abcdefghijklmnopqrstuvwxyz'
key = list(letters)

#phrase = "you get what you get and you don't throw a fit"
phrase = "there are two Skyes in Paw Patrol"

new_phrase = encode(phrase, key, 7)

print new_phrase
