#!/usr/bin/sage

if __name__ == "__main__":


    bd = 1000

    b_vals = prime_range(41,bd+1)

    poly_ring.<x> = ZZ[]

    good_pairs = []

    #Pi = product(prime_range(100))

    start_a = -bd+1
    if start_a % 2 == 0:
        start_a += 1

    end_a = bd-1

    max_len = 0
    arg_max = []

    for b in b_vals:

        print(b)

        for a in range(start_a, end_a+1, 2):

            for s in [-1,1]:

                f = x^2 + a*x + s*b

                i = 1

                while True:

                    v = abs( f(x=i) )

                    if not is_prime(v):

                        break

                    i += 1

                if i > max_len:

                    max_len = i
                    arg_max = [a,s*b]


    prod_coeffs = prod(arg_max)

    print("%d" % arg_max)
