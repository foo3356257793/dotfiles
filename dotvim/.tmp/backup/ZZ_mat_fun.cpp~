#include "ZZ_mat_fun_ZZ_mat.cpp"
#include "ZZ_mat_fun_ZZ_mat_ZZ_mat.cpp"
#include "ZZ_mat_fun_ZZ_mat_ZZ.cpp"
#include "ZZ_mat_fun_ZZ_mat_UI.cpp"

ZZ_mat identity_matrix(int dim){
  if(dim < 0){
    throw std::invalid_argument("Negative dimensional identity");
  }
  auto out = ZZ_mat(dim,dim);
  out.translate(fmpz_mat_one);
  return out;
}

ZZ_mat zero_matrix(int rows, int cols){
  if(rows<0 || cols<0){
    throw std::invalid_argument("Negative dimensional zero_matrix");
  }
  auto out = ZZ_mat(rows,cols);
  out.translate(fmpz_mat_zero);
  return out;
}
