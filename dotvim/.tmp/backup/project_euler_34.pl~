#!/usr/bin/perl


 #####################################################################################################
 # Project Euler, Problem 34								   	     #
 #   Find the sum of all numbers which are equal to the sum of the factorial of their digits.	     #
 #####################################################################################################

use strict;
use warnings;

sub sumFactorial($);

my @factorial = (1, 1, 2, 6, 24, 120, 720, 5040, 40320, 362880);
my $sum	       = 0;

for(my $i = 10; $i < 2540160; $i++){
    if($i == sumFactorial($i)){
	$sum += $i;
    }
}

STUFF

print "$sum\n";

sub sumFactorial($){
    my $number = shift;
    my @digits = split('', $number);
    my $sum = 0;
    foreach my $digit (@digits){
	$sum += $factorial[$digit];
    }
    return $sum;
}
