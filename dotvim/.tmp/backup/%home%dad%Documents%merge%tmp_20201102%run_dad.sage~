#!/usr/bin/sage

import os,sys

sys.path.append(".")

import dad

import unittest

def factor_vec(A):

    result = A.factor_vec()
    result = [(int(f),exponent) for f,exponent in result]

    return result

class TestDad(unittest.TestCase):

    def test_dad(self):

        a = 2*3*5*7

        A = dad.DadFactors(a)

        factors = factor_vec(A)

        prod_factors = prod([f**exponent for f,exponent in factors])

        self.assertEqual(prod_factors,a)

if __name__ == "__main__":

    suite = unittest.TestSuite()
    suite.addTest(TestDad("test_dad"))
    unittest.TextTestRunner().run(suite)
