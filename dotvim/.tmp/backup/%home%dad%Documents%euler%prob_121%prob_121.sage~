#!/usr/bin/sage

def branch_prob_win(n_blue, n_turns, turn):

    if turn == n_turns:
        if 2 * n_blue > n_turns:
            return 1
        else:
            return 0

    p_blue = 1/(2+turn)

    p_blue_and_win = p_blue * branch_prob_win(n_blue+1,n_turns,turn+1)

    p_red = 1-p_blue

    p_red_and_win = p_red * branch_prob_win(n_blue,n_turns,turn+1)

    return p_blue_and_win + p_red_and_win


if __name__ == "__main__":

    p = branch_prob_win(0,15,0)

    print(floor(1/p))
