_ZZ_mat &translate(const std::function<void(fmpz_mat_t,const fmpz_mat_t)> &fun,
    const _ZZ_mat_1 &in);

_ZZ_mat &translate(const std::function<void(fmpz_mat_t,fmpz_mat_t,const fmpz_mat_t)> &fun,
    const _ZZ_mat_1 &in);

_ZZ_mat &operator=(const _ZZ_mat_1 &in);

