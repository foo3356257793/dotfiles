#!/usr/bin/python

import sys

if __name__ == "__main__":

  print ""
  print "***************"
  print "*** PUZZBOX ***"
  print "***************"
  print ""

  person = raw_input("Enter your name: ")
  print "\nHello %s." % person


  print "\nToday the password is four numbers between 0 and 1.\n"

  answer = [0,1,1,0]
  guess = [-1,-1,-1,-1]

  valid = [0,1]
  while guess != answer:

    for ind in range(4):
      try:
        guess[ind] = int( raw_input("\tNumber #%d: " % (ind+1)) )

        if not guess[ind] in valid:
          print "\nThat's not 0 or 1."
          print "\nStart over.\n"
          guess = [-1,-1,-1,-1]
          break

      except:
        print "\nThat's not 0 or 1."
        print "\nStart over.\n"
        guess = [-1,-1,-1,-1]
        break

    if guess != answer:
      print "\nNo, try again.\n"


  print ""
  print "Hooray, %s, you got it correct!" % person
  print ""

  fp = open('cow.txt', 'r')
  for line in fp:
    sys.stdout.write("\t" + line)
  fp.close()

  print ""
