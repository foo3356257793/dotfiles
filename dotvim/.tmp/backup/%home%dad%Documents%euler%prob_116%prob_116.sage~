#!/usr/bin/sage

def n_fill(n,m):

    if n < m:
        return 1

    n_ways_to_fill = [1] * m

    for i in range(m,n+1):

        ways = n_ways_to_fill[i-1] # first is gray
        ways += n_ways_to_fill[i-m] # first m are colors

        n_ways_to_fill.append(ways)

    return ways

if __name__ == "__main__":

    n = 5

    bd = 10**6

    print((n_fill(n,2)-1) + (n_fill(n,3)-1) + (n_fill(n,4)-1))
